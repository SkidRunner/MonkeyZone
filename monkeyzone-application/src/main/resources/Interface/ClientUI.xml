?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
	
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	
	<controlDefinition name="iconListItem">
		<panel childLayout="horizontal" width="100%" align="center">
			<image id="#list-item-icon" width="32px" height="32px" />
			<control id="#list-item-label" name="label" style="nifty-label" />
		</panel>
	</controlDefinition>
	
	<!--
	  -- LOGIN
	  -- TextField(userName)
	  -- Label(status)
	  -->
	<screen id="login">
		<layer childLayout="center">
			<panel childLayout="vertical" style="nifty-panel" align="center" valign="center">
				<control name="label" style="nifty-label" text="Welcome to MonkeyZone!" />
				<panel height="10px" />
				<image filename="Interface/Images/Logo.png" align="center" valign="center" />
				<panel height="10px" />
				<control name="label" style="nifty-label" text="UserName" />
				<panel height="10px" />
				<control id="userName" name="textField" />
				<panel height="10px" />
				<control name="button" label="Login">
					<interact onClick="login()"/>
				</control>
				<panel height="10px" />
				<control id="status" name="label" style="nifty-label" text="" />
			</panel>
		</layer>
	</screen>
	
	<!--
	  -- LOBBY
	  -- ListBox(players)
	  -- ListBox(maps)
	  -- ChatControl(chat)
	  -->
	<screen id="lobby">
		<layer childLayout="vertical">
			<panel childLayout="horizontal">
				<panel childLayout="vertical" style="nifty-panel">
					<control name="label" style="nifty-label" text="Players Online" />
					<panel height="10px" />
					<control id="players" name="listBox" displayItems="8" selection="Disabled">
						<!-- TODO: Add custom view -->
					</control>
				</panel>
				<panel childLayout="vertical" style="nifty-panel">
					<control name="label" style="nifty-label" text="Available Maps" />
					<panel height="10px" />
					<control id="maps" name="listBox" displayItems="8" selection="Single">
						<!-- TODO: Add custom view -->
					</control>
					<control name="button" label="Start">
						<interact onClick="startGame()"/>
					</control>
				</panel>
			</panel>
			<panel childLayout="horizontal" style="nifty-panel">
				<control id="chat" name="nifty-chat" width="100%" height="*" lines="14" sendLabel="Send Message" />
			</panel>
		</layer>
	</screen>
	
	<!--
	  -- LOAD
	  -- Label(status)
	  -->
	<screen id="load">
		<layer childLayout="center">
			<panel childLayout="vertical" style="nifty-panel">
				<control name="label" style="nifty-label" text="Loading Map" />
				<panel height="*" />
				<control id="status" name="label" style="nifty-label" text="Loading..." />
			</panel>
		</layer>
	</screen>
	
